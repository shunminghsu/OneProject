<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_outer_storage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightLightGray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/remind_unlock_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-110dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:src="@mipmap/img_reminding_unlock"/>

        <TextView
            android:id="@+id/Attention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/remind_unlock_storage"
            android:gravity="center"
            android:text="@string/security_notify"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Attention"
            android:gravity="center"
            android:text="@string/MSG_UserUnlockDisk"
            android:textSize="12sp"/>

    </RelativeLayout>


</LinearLayout>