<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_file_manage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/listitem_file_manage_icon_layout"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/listitem_file_manage_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"
             />

        <ImageView
            android:id="@+id/listitem_file_manage_mark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:visibility="invisible" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/listitem_file_manage_info_layout"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/listitem_file_manage_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="20dp"
            android:visibility="visible"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_toLeftOf="@+id/listitem_file_manage_info_layout"
        android:layout_toRightOf="@+id/listitem_file_manage_icon_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listitem_file_manage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="bottom"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/listitem_file_manage_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="top"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:id="@+id/listitem_file_manage_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#E0E0E0" />

</RelativeLayout>